---
import { defaultLocale } from "@/i18n/config";

const tag = Astro.params.tag;
const page = Astro.params.page;
if (!tag || !page) {
  return Astro.redirect(`/${defaultLocale}/blog/`, 308);
}

const encodedTag = encodeURIComponent(tag);
const target = `/${defaultLocale}/blog/tag/${encodedTag}/page/${page}/`;
return Astro.redirect(target, 308);
