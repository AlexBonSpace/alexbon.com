---
import SiteLayout from "@/layouts/SiteLayout.astro";
import PostGrid from "@/components/blog/PostGrid.astro";
import { locales, type Locale } from "@/i18n/config";
import { paginateSummaries } from "@/lib/post-summaries";
import { messagesByLocale } from "@/lib/messages";
import { translate, type MessageDictionary } from "@/i18n/translator";
import { buildCanonicalUrl, buildLanguageAlternates } from "@/lib/seo";
import { toExplorerPosts } from "@/lib/blog-explorer";
import { notFound } from "@/lib/http";

export const prerender = true;

export function getStaticPaths() {
  const paths: Array<{ params: { locale: string; page: string } }> = [];
  for (const locale of locales) {
    const pagination = paginateSummaries(locale, 1);
    for (let page = 2; page <= pagination.totalPages; page += 1) {
      paths.push({ params: { locale, page: String(page) } });
    }
  }
  return paths;
}

const localeParam = Astro.params.locale?.toLowerCase() as Locale | undefined;
const rawPage = Astro.params.page;
const pageNumber = rawPage ? Number.parseInt(rawPage, 10) : NaN;

if (!localeParam || !locales.includes(localeParam) || !rawPage || Number.isNaN(pageNumber) || pageNumber < 1) {
  return notFound();
}

const locale = localeParam;
const pagination = paginateSummaries(locale, pageNumber);
if (pageNumber > pagination.totalPages || pagination.totalCount === 0) {
  return notFound();
}

const messages = messagesByLocale[locale] as MessageDictionary;
const pagePosts = toExplorerPosts(pagination.items, locale);

const title = translate(messages, "Pagination.archiveTitle", { page: pageNumber });
const description = translate(messages, "Pagination.archiveDescription", { page: pageNumber });
const summary = translate(messages, "Pagination.pageSummary", {
  page: pageNumber,
  total: pagination.totalPages,
});
const previousLabel = translate(messages, "Pagination.previous");
const nextLabel = translate(messages, "Pagination.next");
const readMoreRaw = translate(messages, "Blog.readMore");
const readMoreLabel =
  readMoreRaw === "Blog.readMore"
    ? locale === "ru"
      ? "Читать дальше"
      : locale === "en"
        ? "Read more"
        : "Читати далі"
    : readMoreRaw;

const prefix = `/${locale}`;
const canonical = buildCanonicalUrl(locale, pageNumber === 1 ? "/blog/" : `/blog/page/${pageNumber}/`);
const availableLocales = locales.filter((candidate) => {
  const info = paginateSummaries(candidate, 1);
  return info.totalPages >= pageNumber && info.totalPages > 1;
});
const languageAlternates =
  availableLocales.length > 0
    ? buildLanguageAlternates(
        availableLocales.reduce<Record<Locale, string>>((acc, candidate) => {
          acc[candidate] = pageNumber === 1 ? "/blog/" : `/blog/page/${pageNumber}/`;
          return acc;
        }, {}),
        { locales: availableLocales },
      )
    : undefined;
---

<SiteLayout
  locale={locale}
  title={title}
  description={description}
  canonical={canonical}
  languageAlternates={languageAlternates}
>
  <main class="relative z-10 flex flex-col gap-10 py-8 sm:py-12">
    <div class="mx-auto w-full max-w-6xl px-4 sm:px-6">
      <section class="section-card flex flex-col gap-4 rounded-[2rem] border border-soft p-5 text-sm shadow-card sm:p-8">
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-muted">
          {translate(messages, "Pagination.pageLabel", { page: pageNumber })}
        </p>
        <h1 class="text-[clamp(1.8rem,4.5vw,2.6rem)] font-semibold leading-tight text-strong">
          {title}
        </h1>
        <p class="text-primary">{description}</p>
      </section>
    </div>

    <div class="mx-auto w-full max-w-6xl px-4 sm:px-6">
      <PostGrid
        posts={pagePosts}
        readMoreLabel={readMoreLabel}
        pagination={{
          currentPage: pageNumber,
          totalPages: pagination.totalPages,
          basePath: `${prefix}/blog/`,
          summary,
          previousLabel,
          nextLabel,
        }}
      />
    </div>
  </main>
</SiteLayout>
