---
type SocialLink = {
  id: "x" | "telegram" | "facebook";
  label: string;
  href: string;
  badgeBg: string;
  iconColor: string;
  iconPath: string;
};

const socialLinks: SocialLink[] = [
  {
    id: "x",
    label: "X (Twitter)",
    href: "https://x.com/AlexBonSpace",
    badgeBg: "#000000",
    iconColor: "#ffffff",
    iconPath:
      "M14.234 10.162 22.977 0h-2.072l-7.591 8.824L7.251 0H.258l9.168 13.343L.258 24H2.33l8.016-9.318L16.749 24h6.993zm-2.837 3.299-.929-1.329L3.076 1.56h3.182l5.965 8.532.929 1.329 7.754 11.09h-3.182z",
  },
  {
    id: "telegram",
    label: "Telegram",
    href: "https://t.me/AlexBonSpace",
    badgeBg: "#26A5E4",
    iconColor: "#ffffff",
    iconPath:
      "M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z",
  },
  {
    id: "facebook",
    label: "Facebook",
    href: "https://www.facebook.com/AlexBonSpace",
    badgeBg: "#0866FF",
    iconColor: "#ffffff",
    iconPath:
      "M9.101 23.691v-7.98H6.627v-3.667h2.474v-1.58c0-4.085 1.848-5.978 5.858-5.978.401 0 .955.042 1.468.103a8.68 8.68 0 0 1 1.141.195v3.325a8.623 8.623 0 0 0-.653-.036 26.805 26.805 0 0 0-.733-.009c-.707 0-1.259.096-1.675.309a1.686 1.686 0 0 0-.679.622c-.258.42-.374.995-.374 1.752v1.297h3.919l-.386 2.103-.287 1.564h-3.246v8.245C19.396 23.238 24 18.179 24 12.044c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.628 3.874 10.35 9.101 11.647Z",
  },
];

type Props = {
  className?: string;
};

const { className = "" } = Astro.props as Props;
---
<aside class={`blog-card flex flex-col gap-4 rounded-3xl border border-soft p-5 text-sm text-primary ${className}`}>
  <p class="text-[clamp(1rem,2.6vw,1.1rem)] font-medium leading-relaxed text-strong">
    Хотите подглядывать за тараканами в своей (и моей) голове? Продолжим здесь:
  </p>
  <ul class="flex flex-col gap-3 sm:flex-row sm:flex-wrap">
    {socialLinks.map((link) => (
      <li>
        <a
          href={link.href}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex w-full items-center gap-3 rounded-full border border-soft px-4 py-2 text-sm font-semibold text-strong transition-colors hover:bg-soft/60 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent"
        >
          <span
            class="flex h-10 w-10 items-center justify-center rounded-full"
            style={`background:${link.badgeBg}; color:${link.iconColor}`}
            aria-hidden="true"
          >
            <svg viewBox="0 0 24 24" aria-hidden="true" class="h-4 w-4 fill-current">
              <path d={link.iconPath} />
            </svg>
          </span>
          <span>{link.label}</span>
        </a>
      </li>
    ))}
  </ul>
</aside>
