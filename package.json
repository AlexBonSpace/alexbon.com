{
  "name": "alexbon-astro",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "start": "bash scripts/start-dev.sh",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "algolia:sync": "node scripts/push-algolia.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "cache:build": "node scripts/build-cache.mjs",
    "predev": "npm run cache:build",
    "prebuild": "npm run cache:build",
    "postbuild": "node scripts/normalize-routes.mjs",
    "prepare": "husky",
    "verify:seo": "node scripts/verify-seo.mjs",
    "verify": "npm audit --audit-level=high && npm run test && npm run build && npm run verify:seo",
    "lint": "eslint \"src/**/*.{ts,tsx,astro}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,astro}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,astro,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,astro,css,json}\""
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.10",
    "@astrojs/react": "^4.4.2",
    "algoliasearch": "^5.43.0",
    "astro": "^5.15.8",
    "dotenv": "^17.2.3",
    "motion": "^12.23.24",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@astrojs/cloudflare": "^12.6.10",
    "@csstools/css-parser-algorithms": "^3.0.5",
    "@csstools/css-tokenizer": "^3.0.4",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "fast-glob": "^3.3.3",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "jsonfeed-schema": "^0.5.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^4.1.17",
    "vitest": "^4.0.8",
    "wrangler": "^4.46.0"
  },
  "overrides": {
    "js-yaml": "^4.1.1"
  }
